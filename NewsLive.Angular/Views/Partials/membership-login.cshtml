<form class="login-form" ng-show="showLogin" >
     <p ng-show="showWarning" class="login-banner-warning label label-warning">Your request failed. Please try again.</p>
     <div class="form-group">
        <dynamic-input model="input.username.value" config="input.username.config"  ></dynamic-input>
    </div>
    <div class="form-group">
        <dynamic-input model="input.password.value" config="input.password.config"></dynamic-input>
        <p class="help-block">Login with your email address and blank password</p>
    </div>
    <button type="button" ng-click="attemptLogin()" class="btn btn-default pull-right">Submit</button>
</form>
